	{% if content.field_newsletter_image.0 %}
	{% set image %}
	{{content.field_newsletter_image}}
	{% endset %}
	{# {% elseif article.imagepath %}
					{% set image %}
					<figure>
						<img src="{{article.imagepath}}" alt="{{article.alt}}">
					</figure>
					{% endset %} #}
{% else %}
	{% set image %}
	<figure>
		{{ drupal_image('article.imagepath', 'medium')}}
		<img src="{{article.newsletter_imagepath}}" alt="{{article.alt}}">
	</figure>
	{% endset %}
{% endif %}
