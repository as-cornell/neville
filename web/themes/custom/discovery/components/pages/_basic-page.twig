{# 

/* -------------------------

Title: _basic-page.twig
Descr: defines content and blocks for _default.twig for content type 'basic page', 'landing page'
    * sidebar shows up basedon 

--------------------------- */ 

#}


{% set sidebar_wrapper_extra_classes = sidebar_wrapper_extra_classes | default(['']) %}


<main {{ bem(main_element_base_class, (main_element_modifiers), main_element_blockname, main_element_extra_classes) }} id="mainContent">


	<div class="title">
		{% if hasPano %}
			{{pano}}
		{% endif %}
		{% include "@content/atoms/_heading.twig" with {
        "heading_level" : 1,
        "heading" : title,
        "heading_modifiers" : heading_modifiers,
        "heading_base_class" : heading_base_class,
        "heading_class" : heading_class
      } %}
	</div>


	<div class="content">
		{{main_content}}
	</div>
	{% if sidebarNav != false %}
		<nav class="nav--site">
			<p class="siteNavOpener">

				<span>
					Expand site nav
				</span>
				<button class="subNav-toggle icon icon--button " aria-haspopup="true" aria-label="secondary menu closed" aria-expanded="false">
					<svg viewbox="0 0 20 20" class="icon--arrow">
						<use xlink:href="#chevron-down"></use>
					</svg>
				</button>

			</p>

			{# fake sidebar nav start #}
			<nav class="nav--site">
				<p class="siteNavOpener">
					<span>
						Related content
					</span>
					<button class="subNav-toggle icon icon--button " aria-haspopup="true" aria-label="secondary menu closed" aria-expanded="false">
						<svg viewbox="0 0 20 20" class="icon--arrow">
							<use xlink:href="#chevron-down"></use>
						</svg>
					</button>

				</p>


				<ul class="nav nav--site">

					<li class="nav__root nav__root--active-trail nav__root--with-nav-1 with-sub">
						<a href="/education" class="nav__link">
							Education
						</a>

						<!-- ##### Start of block ##### -->


						<ul class="nav-1">

							<li class="nav-1__item">
								<a href="/majors-and-minors" class="nav-1__link">
									Majors and Minors
								</a>


							</li>


							<li class="nav-1__item nav-1__item--active-trail">
								<a href="/education/degree-requirements" class="nav-1__link">
									Degree Requirements
								</a>

								<!-- ##### Start of block ##### -->
								<ul class="nav-2 otpNav">
									<li class='nav-2__item' id='requirements'>
										<a href='/education/degree-requirements#requirements'>
											Requirements
										</a>
									</li>
									<li class='nav-2__item' id='about-the-distribution-requirements'>
										<a href='/education/degree-requirements#about-the-distribution-requirements'>
											About the distribution requirements
										</a>
									</li>
									<li class='nav-2__item' id='about-the-foreign-language-requirement'>
										<a href='/education/degree-requirements#about-the-foreign-language-requirement'>
											About the foreign language requirement
										</a>
									</li>
									<li class='nav-2__item' id='tracking-your-degree-requirements'>
										<a href='/education/degree-requirements#tracking-your-degree-requirements'>
											Tracking Your Degree Requirements
										</a>
									</li>
								</ul>
							</li>
							<li class="nav-1__item">
								<a href="/education/old-degree-requirements" class="nav-1__link">
									Degree Requirements (before Fall 2020)
								</a>
							</li>
							<li class="nav-1__item">
								<a href="/education/curriculum" class="nav-1__link">
									An Innovative Curriculum
								</a>
							</li>
							<li class="nav-1__item">
								<a href="/education/special-academic-opportunities" class="nav-1__link">
									Special Academic Opportunities
								</a>
							</li>
							<li class="nav-1__item">
								<a href="/education/education-innovation" class="nav-1__link">
									Education Innovation
								</a>
							</li>
							<li class="nav-1__item">
								<a href="/education/educational-outcomes" class="nav-1__link">
									Educational Outcomes
								</a>
							</li>
						</ul>
					</li>
				</ul>
			</nav>


			{# fakes sidebar nav end #}
			{# {{ sidebar_nav }} #}
		</nav>
	{% endif %}
	{% if sidebarContent %}
		<div class="sidebar">
			{{sidebar_content}}
		</div>
	{% endif %}
	{% if aside %}
		<aside role="complimentary">
			<h2>
				test aside here?
			</h2>
			{{ otp_nav }}
			{{ aside_content }}
		</aside>
	{% endif %}
</main>
