{# {{vardumper()}} #}
{% set sidebar_wrapper_extra_classes = sidebar_wrapper_extra_classes | default(['']) %}
<main {{ bem(main_element_base_class, (main_element_modifiers), main_blockname, main_element_extra_classes) }}>
	{{title_suffix}}
	<p class="type eyebrow">

		{{type}}

	</p>
	{% include "@content/atoms/_heading.twig" with {
    "heading_level" : 1,
    "heading" : title,
    "heading_modifiers" : ["margin"],
    "heading_base_class" : "title"
  } %}


	<div class="content">
		{{description}}
		{{body}}
		{% if show_related_people %}
			<h3>
				Department Faculty
			</h3>
			<ul class="columns">
				{{related_people}}
			</ul>
		{% endif %}


	</div>
	<div class="sidebar">
		{{image}}
		{{websiteLink}}


		<p>
			<a href=""></a>
		</p>
    {% if showLinks %}
		<h3>
			Learn more
		</h3>
		{{links}}
    {% endif %}

		{% if show_related_articles %}
			<h3>
				Related articles
			</h3>
			{{related_articles}}
		{% endif %}


		{% if show_disciplines %}
			<h3>
				Related disciplines
			</h3>
			{{disciplines}}
		{% endif %}


	</div>
</main>
