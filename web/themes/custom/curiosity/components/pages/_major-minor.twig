{# 

/* -------------------------

Title: _major-minor.twig
Descr: defines content and blocks for majors and minors detail pages

--------------------------- */ 

#}
{% set sidebar_wrapper_extra_classes = sidebar_wrapper_extra_classes | default(['']) %}
<main {{ bem(main_element_base_class, (main_element_modifiers), main_blockname, main_element_extra_classes) }}>
	{{title_suffix}}

	{% include "@content/atoms/_heading.twig" with {
    "heading_level" : 1,
    "heading" : title,
    "heading_modifiers" : ["margin"],
    "heading_base_class" : "title"
  } %}
	<div class="degree-levels">
		{{level}}
	</div>


	<div class="content">
		{{description}}
		{{body}}

		{% if show_requirements %}
			<h2 id="requirments">
				Requirements
			</h2>
			{{requirements}}
		{% endif %}
		{% if show_classes %}
			<h2 id="classes">
				Sample classes
			</h2>
			{{classes}}
		{% endif %}
		{% if show_outcomes %}
			<h2 id="outcomes">
				Outcomes
			</h2>
			{{outcomes}}
		{% endif %}
	</div>
	<div class="sidebar">
		{{image}}
		<h3>
			Learn more
		</h3>
		{{links}}

		{% if show_related_articles %}
			<h3>
				Related articles
			</h3>
			{{related_articles}}
		{% endif %}

		{% if show_interests %}
			<h3>
				Associated interests
			</h3>
			{{interests}}
		{% endif %}

		{% if show_disciplines %}
			<h3>
				Related disciplines
			</h3>
			{{disciplines}}
		{% endif %}


	</div>
</main>
