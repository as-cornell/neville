{#

/* -------------------------

Title: _view-list.twig
Descr: output for view listings
receives:
  --- view_content
Setting up new block class of 'teaser' 

--------------------------- */

#}
{% if show_filter %}
	{{ attach_library('curiosity/markjs') }}
{% endif %}
{% if show_fancybox %}
	{{ attach_library('curiosity/fancybox' )}}
{% endif %}

<main {{ bem(main_element_base_class, (main_element_modifiers), main_blockname, main_element_extra_classes) }}>
	<div class="pageTitle">
		{% include "@content/atoms/_heading.twig" with {
    "heading_level" : 1,
    "heading" : view_title
  } %}
		{% if view_sub_title %}
			{% include "@content/atoms/_heading.twig" with {
    "heading_level" : 3,
    "heading" : view_sub_title,
    "heading_modifiers" : ["margin"]
  } %}
		{% endif %}


	</div>
	<span class="view--form">
		{{view_form}}
	</span>
	<span class="view--facets">
		{{view_header}}
		{{facets}}
	</span>
	<div class="content">
		{{ view_content }}
	</div>
	{% if view_pager %}
		<div class="pager">
			{{ view_pager }}
		</div>
	{% endif %}

</main>
